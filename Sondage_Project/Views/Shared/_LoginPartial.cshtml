@using Microsoft.AspNetCore.Identity
@using Sondage_Project.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item authli">
        <a id="manage" class="nav-link text-dark link-nav" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <form method="post" id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark link-nav">Déconnexion</button>
        </form>
    </li>
}
else
{
    <li class="nav-item authli">
        <a class="nav-link text-dark link-nav" id="register" asp-area="Identity" asp-page="/Account/Register">Inscription</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark link-nav" id="login" asp-area="Identity" asp-page="/Account/Login">Connexion</a>
    </li>
}
