@model Sondage_Project.Data.Models.Sondage

@{
    ViewData["Title"] = "Answer";
}

<h1>Participation</h1>

<h4>Sondage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Answer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SondageId" />
            <input type="hidden" asp-for="IsActivated" />
            <input type="hidden" asp-for="Question" />
            <input type="hidden" asp-for="Answer_1" />
            <input type="hidden" asp-for="Answer_2" />
            <input type="hidden" asp-for="Answer_3" />
            <input type="hidden" asp-for="Answer_4" />
            <input type="hidden" asp-for="Counter_1" />
            <input type="hidden" asp-for="Counter_2" />
            <input type="hidden" asp-for="Counter_3" />
            <input type="hidden" asp-for="Counter_4" />
            <div class="form-group">
                <p>@Model.Question</p>
            </div>
            <div class="answer-block" >
                <div class="form-group-question">
                    <p>@Model.Answer_1</p>
                    <input asp-for="answer1check" type="checkbox" name="answer1check" />
                </div>
                <div class="form-group-question">
                    <p>@Model.Answer_2</p>
                    <input asp-for="answer2check" type="checkbox" name="answer2check" />
                </div>
                <div class="form-group-question">
                    <p>@Model.Answer_3</p>
                    <input asp-for="answer3check" type="checkbox" name="answer3check" />
                </div>
                <div class="form-group-question">
                    <p>@Model.Answer_4</p>
                    <input asp-for="answer4check" type="checkbox" name="answer4check" />
                </div>
            </div>
                <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
