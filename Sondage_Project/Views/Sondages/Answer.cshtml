@model Sondage_Project.Data.Models.Sondage

@{
    ViewData["Title"] = "Answer";
}

<h1>Participation</h1>

<h4>Sondage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Answer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Question" class="control-label"></label>
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="answer-block">
                <div class="form-group-question">
                    <label asp-for="Answer_1" class="control-label"></label>
                    <input asp-for="Answer_1" class="form-control" />
                    <input type="checkbox" name="answer1check" />
                    <span asp-validation-for="Answer_1" class="text-danger"></span>
                </div>
                <div class="form-group-question">
                    <label asp-for="Answer_2" class="control-label"></label>
                    <input asp-for="Answer_2" class="form-control" />
                    <input type="checkbox" name="answer2check" />
                    <span asp-validation-for="Answer_2" class="text-danger"></span>
                </div>
                <div class="form-group-question">
                    <label asp-for="Answer_3" class="control-label"></label>
                    <input asp-for="Answer_3" class="form-control" />
                    <input type="checkbox" name="answer3check" />
                    <span asp-validation-for="Answer_3" class="text-danger"></span>
                </div>
                <div class="form-group-question">
                    <label asp-for="Answer_4" class="control-label"></label>
                    <input asp-for="Answer_4" class="form-control" />
                    <input type="checkbox" name="answer4check" />
                    <span asp-validation-for="Answer_4" class="text-danger"></span>
                </div>
                <div class="form-group-counter">
                    <label asp-for="Counter_1" class="control-label"></label>
                    <input asp-for="Counter_1" class="form-control" />
                    <span asp-validation-for="Counter_1" class="text-danger"></span>
                </div>
                <div class="form-group-counter">
                    <label asp-for="Counter_2" class="control-label"></label>
                    <input asp-for="Counter_2" class="form-control" />
                    <span asp-validation-for="Counter_2" class="text-danger"></span>
                </div>
                <div class="form-group-counter">
                    <label asp-for="Counter_3" class="control-label"></label>
                    <input asp-for="Counter_3" class="form-control" />
                    <span asp-validation-for="Counter_3" class="text-danger"></span>
                </div>
                <div class="form-group-counter">
                    <label asp-for="Counter_4" class="control-label"></label>
                    <input asp-for="Counter_4" class="form-control" />
                    <span asp-validation-for="Counter_4" class="text-danger"></span>
                </div>
            </div>
                <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActivated" /> @Html.DisplayNameFor(model => model.IsActivated)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MultipleAnswer" /> @Html.DisplayNameFor(model => model.MultipleAnswer)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
