@model IEnumerable<Sondage_Project.Data.Models.Sondage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            
            <td>
                @if (item.IsActivated)
                {
                    <a asp-action="Answer" asp-route-id="@item.SondageId">Vote</a>
                }
                <a asp-action="Details" asp-route-id="@item.SondageId">Résultats</a> |
                <a asp-action="Delete" asp-route-id="@item.SondageId">Supression</a>
            </td>
        </tr>
}
    </tbody>
</table>
